# Server config file for scanner web service

map $http_upgrade $connection_upgrade {
    # Upgrade client header for ws:// 
    default upgrade;
    '' close;
}

server {
    listen 80;
    listen [::]:80;

    server_name scanner.psi.live;
    root /usr/lib/interactive_privacyscanner/frontend/target;

    # Frontend
    location / {
        try_files /$uri /scanner.html =404;
    }

    # manager backend
    location /api/ {
        proxy_pass http://localhost:9000/;
    }

    # Websocket manager backend (same server)
    location /ws/ {
        proxy_pass http://localhost:9000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
    }

    # guacamole backend
    location /guac/ {
        proxy_pass http://localhost:8080/;
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $http_connection;
        # proxy_cookie_path /guacamole/ /;
        access_log off;
    }

    location ~* \.(?:jpg|jpeg|gif|png|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc)$ {
        gzip on;
        expires 1M;
        access_log off;
        add_header Cache-Control "public";
    }
}

server {
    listen 80;
    listen [::]:80;

    server_name scanner.psi.test;
    root /usr/lib/interactive_privacyscanner/frontend/target;

    # Frontend development server (e.g. elm-live)
    location / {
        proxy_pass http://localhost:9001/;
    }

    # manager backend
    location /api/ {
        proxy_pass http://localhost:9000/;
    }

    # Websocket manager backend (same server)
    location /ws/ {
        proxy_pass http://localhost:9000/;
        proxy_http_version 1.1;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $connection_upgrade;
        proxy_set_header Host $host;
    }

    # guacamole backend
    location /guac/ {
        proxy_pass http://localhost:8080/;
        proxy_buffering off;
        proxy_http_version 1.1;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection $http_connection;
        # proxy_cookie_path /guacamole/ /;
        access_log off;
    }

    location ~* \.(?:jpg|jpeg|gif|png|ico|cur|gz|svg|svgz|mp4|ogg|ogv|webm|htc)$ {
        gzip on;
        expires 1M;
        access_log off;
